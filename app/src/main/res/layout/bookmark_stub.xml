<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100">

    <data>
        <variable
            name="bookmark"
            type="com.jmarkman.hackernewsreader.model.Bookmarks"/>
    </data>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="85"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stub_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{bookmark.article_title}"
            android:textSize="@dimen/stub_title_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stub_article_source"
            android:textSize="@dimen/stub_url_size"
            android:maxLines="1"
            android:text="@{bookmark.source}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stub_article_date"
                android:textSize="@dimen/stub_metadata_info_size"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_weight="50"
                android:text="@{bookmark.hn_id}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stub_submitter"
                android:layout_weight="50"
                android:textSize="@dimen/stub_metadata_info_size"
                android:text="@{bookmark.submitted_by}"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stub_article_score"
                android:layout_weight="50"
                android:textSize="@dimen/stub_metadata_info_size"
                android:text="@{bookmark.date}"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</layout>